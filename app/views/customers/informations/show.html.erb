<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p class="text-center"><b><%= current_customer.first_name %>さんの登録情報！<b></p>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table">
      <tr>
        <td>氏名</td>
        <td><%= "#{@customer.first_name} #{@customer.last_name}" %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= "#{@customer.first_name_kana} #{@customer.last_name_kana}" %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    <div class="col-md-8 col-md-offset-5">
      <%= link_to "編集する", edit_customers_informations_path, class: "btn btn-danger" %>
  </div>
</div>