<div class="row">
  <div class="col-md-11 col-md-offset-3">
    <h4>イベント登録</h4>
  </div>

  <%= form_for(@event, url: admins_events_path) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
      <div class="col-md-10 col-md-offset-2">
        <div class="row">
          <div class="form-group">
            <label class="col-md-3 control-label">イベント名</label>
            <div class="col-md-6">
              <%= f.text_field :title, class: "form-control"%>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <label class="col-md-3 control-label">開始日</label>
            <div class="col-md-6">
              <%= f.datetime_field :start, class: "form-control", rows: "4" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <label class="col-md-3 control-label">終了日</label>
            <div class="col-md-6">
             <%= f.datetime_field :end, class: "form-control", rows: "4" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <label class="col-md-3 control-label">詳細</label>
            <div class="col-md-6">
              <%= f.text_field :explanation, class: "form-control"%>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <%= f.submit "変更を保存", class: "btn btn-danger col-md-offset-8" %>
        </div>
      <% end %>
</div>