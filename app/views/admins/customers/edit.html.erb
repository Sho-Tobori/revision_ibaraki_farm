<div class="row text-center">
  <div class="col-md-7 col-lg-offset-1">
    <h3><%= @customer.first_name %><%= @customer.last_name %>さんの編集</h3>
  </div>
</div>
<br>
  <%= form_for(@customer, url: admins_customer_path(@customer)) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="row">
    <div class="col-md-7 col-md-offset-4">
      <div class="form-group row">
        <label class="col-md-3 control-label">会員ID</label>
        <div class="col-md-3">
          <%= @customer.id %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 col-md-offset-4">
      <div class="form-group row">
        <label class="col-md-3 control-label">氏名</label>
        <div class="col-md-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 col-md-offset-4">
      <div class="form-group row">
        <label class="col-md-3 control-label">フリガナ</label>
          <div class="col-md-3">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7 col-md-offset-4">
        <div class="form-group row">
          <label class="col-md-3 control-label">郵便番号</label>
          <div class="col-md-3">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_cade", class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7 col-md-offset-4">
        <div class="form-group row">
          <label class="col-md-3 control-label">住所</label>
        <div class="col-md-7">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
        </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="col-md-7 col-md-offset-4">
          <div class="form-group row">
            <label class="col-md-3 control-label">電話番号</label>
            <div class="col-md-3">
              <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-7 col-md-offset-4">
          <div class="form-group row">
            <label class="col-md-3 control-label">メールアドレス</label>
            <div class="col-md-5">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-7 col-md-offset-4">
          <div class="form-group row">
            <label class="col-md-3 control-label">会員ステータス</label>
            <div class="col-md-5">
              <div class="radio-inline">
                <%= f.radio_button :is_deleted, :有効, checked: "checked" %>
                <%= f.label :有効 %>
              </div>
              <div class="radio-inline">
                <%= f.radio_button :is_deleted, :退会済み %>
                <%= f.label :退会済み %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-7 col-md-offset-5">
          <div class="form-group row">
            <%= f.submit "変更を保存する", class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>