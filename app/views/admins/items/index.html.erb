<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h3>ご登録商品</h3>
    <div class="text-left">
      <%= link_to "商品のご登録はこちら", new_admins_item_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
<br>
  <div class="row">
    <div class="col-md-10 col-md-offset-1", style="font-size: 15px;">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">商品画像</th>
            <th class="text-center">商品名</th>
            <th class="text-center">説明</th>
            <th class="text-center">出荷時期</th>
            <th class="text-center">ジャンル</th>
            <th class="text-center">在庫</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= attachment_image_tag item, :image, format: 'jpeg', size:"150x100" %>
            </td>
            <td>
              <%= link_to item.name, admins_item_path(item), :style=> "color:red;" %>
            </td>
            <td>
              <%= item.explanation %>
            </td>
            <td>
              <%= item.shipping_time %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <% if item.sale_status == true %>
                <P> 販売中</P>
              <% else %>
                <P> 売り切れ </P>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>