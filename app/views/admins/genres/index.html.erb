<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h3>ジャンル登録/一覧</h3>
  </div>
  <br>
  <br>
  <div class="col-md-12">
    <%= form_for(@genre, url: admins_genres_path) do |f| %>
    <!-- エラーメッセージ -->
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <div class="row"  style="font-size: 18px;">
          <strong>ジャンル登録</strong>
          <span style="width: 50px;">
            <%= f.text_field :name %>
          </span>
          <%= f.radio_button :is_valid, true, checked: "checked" %>
          <%= f.label :有効 %>
          <%= f.radio_button :is_valid, false %>
          <%= f.label :無効 %>
          <%= f.submit '追加', class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="form-group col-md-6 col-md-offset-1">
    <div class="text-center" style="font-size: 18px;">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">ジャンル</th>
            <th class="text-center">状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td style="width: 45%"><%= genre.name %></td>
              <td style="width: 30%">
                <% if genre.is_valid == true %>
                  <p>有効</p>
                <% elsif genre.is_valid == false %>
                  <p>無効</p>
                <% end %>
              </td>
              <td style="width: 25%">
                <%= link_to "編集する", edit_admins_genre_path(genre), class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>