<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h4>ジャンル編集</h4>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-10">
  <%= form_for(@genre, url: admins_genre_path) do |f| %>
  <!-- エラーメッセージ -->
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <div class="row" style="font-size: 18px;">
        <strong>ジャンル</strong>
        <span style="width: 50px;">
          <%= f.text_field :name %>
        </span>
        <%= f.radio_button :is_valid, true, checked: "checked" %>
        <%= f.label :有効 %>
        <%= f.radio_button :is_valid, false %>
        <%= f.label :無効 %>
        <%= f.submit '変更を保存する', class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
  </div>
</div>